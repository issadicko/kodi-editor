{
    "name": "@issadicko/kodi-editor-react",
    "version": "0.1.0",
    "description": "React components for KodiScript editor",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts",
        "clean": "rm -rf dist"
    },
    "peerDependencies": {
        "monaco-editor": "^0.45.0",
        "react": "^18.0.0",
        "react-dom": "^18.0.0"
    },
    "dependencies": {
        "@issadicko/kodi-editor-language": "^0.0.1",
        "@issadicko/kodi-script": "^0.0.1"
    },
    "devDependencies": {
        "@types/react": "^18.2.48",
        "@types/react-dom": "^18.2.18",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "monaco-editor": "^0.45.0",
        "tsup": "^8.0.1",
        "typescript": "^5.3.3"
    }
}
